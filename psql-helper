mysql workbench

pg_ctl -D "C:\Program Files\PostgreSQL\12\data" start
psql -U postgres
createdb -U postgres newdatabase
\l :list databases
\dt :lists all tables
\d tablename : shows table schemas
\c databasename : connects you to diferent database
createuser --interactive --pwprompt

set PGUSER=postgres

